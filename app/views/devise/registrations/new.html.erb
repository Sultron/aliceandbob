<% content_for :meta_title, "Alice and Bob â€¢ Sign up" %>

<div class="bg-info">
  <div class="devise-page d-flex full-background min-vh-100">
    <div class="col-sm-12 col-md-6 m-auto">
      <div class="card text-white bg-dark">
        <div class="card-body">
          <h2 class="mb-5">Sign up to <span class="highlight">aliceandbob.io!</span></h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
              <% if @minimum_password_length %>
                <small class="form-text text-muted">(<%= @minimum_password_length %> characters minimum)</small>
              <% end %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="form-group mb-5">
              <%= f.submit "Sign up", class: "btn btn-primary" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
          <%= link_to "< Back to home", online_pgp_tool_path, class: "card-link float-right mt-3" %>
        </div>
      </div>
    </div>
  </div>
</div>
